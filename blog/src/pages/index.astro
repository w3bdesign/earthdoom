---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-black">
    <Header title={SITE_TITLE} />
    <main>
      <div
        class="flex flex-col items-center justify-center h-[530px] lg:h-[700px] bg-large-space-ship"
      >
        <div class="bg-black p-4 rounded-lg">
          <h1
            class="text-white text-6xl font-bold mb-8 text-center fade-in-top"
          >
            Earth Doom
          </h1>
          <p class="text-white text-xl mb-6 text-center fade-in-top-second">
            Explore the galaxy like never before
          </p>
        </div>
      </div>
    </main>
    <Footer />
  </body><style>
    .fade-in-top {
      opacity: 0;
      transform: translateY(-40px);
      animation: fadeInTop 0.8s ease-in-out forwards;
    }

    @keyframes fadeInTop {
      from {
        opacity: 0;
        transform: translateY(-40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in-top-second {
      opacity: 0;
      transform: translateY(-40px);
      animation: fadeInTop 0.8s ease-in-out forwards;
      animation-delay: 1s;
    }

    @keyframes fadeInTop {
      from {
        opacity: 0;
        transform: translateY(-40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</html>
